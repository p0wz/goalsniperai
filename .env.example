# GoalGPT Pro Configuration
# Copy this file to .env and fill in your values
# ==========================================

# Flashscore4 RapidAPI Configuration
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=flashscore4.p.rapidapi.com

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=generate-a-strong-random-string-at-least-32-characters-long
ADMIN_PASSWORD=YourSecureAdminPassword123!

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Social Auth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
SESSION_SECRET=long_random_session_secret
FRONTEND_URL=http://localhost:5173
